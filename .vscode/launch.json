{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "serverIp",
            "type": "promptString",
            "default": "127.0.0.1",
            "description": "The IP address of the server"
        },
        {
            "id": "serverPort",
            "type": "promptString",
            "default": "8080",
            "description": "The port of the server"
        }
    ],
    "configurations": [
        {
            "name": "Debug Server",
            "type": "cppdbg",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/server",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/Debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Client",
            "type": "cppdbg",
            "preLaunchTask": "Build Debug",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/client",
            "args": ["${input:serverIp}", "${input:serverPort}"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/Debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
